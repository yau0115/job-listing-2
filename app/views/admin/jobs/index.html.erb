<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn bnt-default" ) %>
</div>

<br><br>

<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type= "button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
           <%= link_to("按照薪資下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
           <%= link_to("按照薪資上限排序", jobs_path(:order => "by_upper_bound")) %>
        </li>
        <li>
           <%= link_to("按照發表時間排序", jobs_path) %>
        </li>
     </ul>
</div>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
    <td>

      <%= render_job_status(job) %>

      <%= link_to(job.title, admin_job_path(job)) %>
    </td>

    <td>
      <%= link_to("Edit", edit_admin_job_path(job)) %> |
      <%= link_to("Destroy", admin_job_path(job), :method => :delete, :data => { :confirm => "Are you sure?" }) %>

      <% if job.is_hidden %>

        <%= link_to("Publish", publish_admin_job_path(job) , :class => "btn btn-xs btn-default") %>
      <% else %>
        <%= link_to("Hide", hide_admin_job_path(job), :class => "btn btn-xs btn-default") %>
      <% end %>

    </td>

    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
